vim Dockerfile
FROM ubuntu
ENTRYPOINT ["echo", "Hello From Docker"]


docker run -it app
docker run -it app echo "hello docker"



vim Dockerfile
FROM ubuntu
ENTRYPOINT ["echo", "Hello From Docker"]
docker run -it app
docker run -it app echo "hello docker"



vim Dockerfile
FROM ubuntu
ENTRYPOINT ["echo"]
CMD ["Hello From Docker"]
docker run -it app
docker run -it app echo "hello docker"














