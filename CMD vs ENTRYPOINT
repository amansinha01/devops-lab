vim Dockerfile
FROM ubuntu
CMD echo 'Hello From Docker'

docker build -t   app .

docker run -it app
docker run -it app echo "hello docker"


vim Dockerfile
FROM ubuntu
CMD echo 'Hello From Docker'
CMD echo 'hello docker swarm'
docker run -it app

